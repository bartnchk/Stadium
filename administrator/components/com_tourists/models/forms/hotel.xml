<?xml version="1.0" encoding="utf-8" ?>

<form>
    <fieldset name="details" label="Отель">

        <field name="id" type="hidden" />

        <field name="title"
               type="text"
               label="Название отеля"
               class="inputbox"
               required="true"
               default="" />

        <field name="description"
               type="textarea"
               label="Описание"
               class="inputbox"
               required="true"
               rows="8"
               default="" />

        <field name="photo"
               type="media"
               label="Фото"
               required="true"
               directory="hotels" />

        <field name="address"
               type="text"
               label="Адрес"
               class="inputbox"
               required="true"
               default="" />

        <field name="phone"
               type="text"
               label="Телефон"
               class="inputbox"
               required="true"
               default="" />

        <field name="email"
               type="text"
               label="E-mail"
               class="inputbox"
               default="" />

    </fieldset>
</form>