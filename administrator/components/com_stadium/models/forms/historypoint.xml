<?xml version="1.0" encoding="utf-8" ?>

<form>
	<fieldset name="details" label="Детали">

		<field name="id" type="hidden" />

		<field name="year"
			type="number"
			label="Год"
			class="inputbox"
			required="true"
			default="" />

		<field name="description"
			type="textarea"
			label="Описание (UA)"
			class="inputbox"
		    rows="10"
			default="" />

		<field name="description_ru"
			type="textarea"
			label="Описание (RU)"
			class="inputbox"
			default="" />

		<field name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			filter="intval"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

	</fieldset>
</form>