<?xml version="1.0" encoding="utf-8" ?>

<form>
	<fieldset name="details" label="Детали мероприятия">

		<field name="id" type="hidden" />

		<field name="title"
			type="text"
			label="Название (UA)"
			class="inputbox"
			default="" />

		<field name="title_ru"
		   type="text"
		   label="Название (RU)"
		   class="inputbox"
		   default="" />

		<field name="description"
			type="textarea"
			label="Описание (UA)"
			class="inputbox"
			rows="10"
			default="" />

		<field name="description_ru"
		   type="textarea"
		   label="Описание (RU)"
		   class="inputbox"
		   rows="10"
		   default="" />

		<field name="background"
			type="media"
			label="Фото"
			required="true"
			directory="media" />

		<field name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			filter="intval"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

	</fieldset>
</form>