<?xml version="1.0" encoding="utf-8" ?>

<form>
	<fieldset name="details" label="Детали товара">

		<field name="id" type="hidden" />

		<field name="title"
			type="text"
			label="Название (UA)"
			class="inputbox"
			default="" />

		<field name="title_ru"
		    type="text"
		    label="Название (RU)"
		    class="inputbox"
		    default="" />

		<field name="image"
			type="media"
			label="Фото"
			required="true"
			directory="products" />

		<field name="published"
			type="list"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC"
			class="chzn-color-state"
			filter="intval"
			size="1"
			default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

	</fieldset>
</form>